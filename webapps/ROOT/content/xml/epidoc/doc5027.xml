                        Publico, <orgName>sancti Octabiani</orgName> in
                            <placeName>Sermena</placeName>, <orgName>sanctae Mariae</orgName> in
                            <placeName>Agnano</placeName>, <orgName>sancti Iusti</orgName> in
                            <placeName>Melitulo</placeName>, <orgName>sancti Iohannis</orgName> in
