            <text>
                <body>
                    <div type="edition">
                        <div type="textpart">
                            <ab><persName key="#Nuns/sanctimoniales"><name ref="Ermelinda"
                                >Ermilinda</name></persName>
                        <rs key="#Nuns/sanctimoniales">religiosa Deo copolata ancilla Dei</rs> filia
                        quondam <persName><name ref="Gotepertus de Vuamo">Godipert</name></persName>
                        de <placeName ref="#places/179">Vuamo</placeName>
                        <foreign>vende</foreign> a <persName key="#Vir_devotus/vir_honestus"><name
                                ref="Robertus">Rodpert</name></persName>
                        <rs key="#Vir_devotus/vir_honestus">viro devoto</rs> filio quondam
                                <persName><name ref="Roppaldus">Rodpald</name></persName>, idest <rs
                            key="#Petiae">aliquantula terrula</rs> mea qui mihi per <rs
                            key="#Offersio/donatio">donationem</rs> obvenit da quondam bone memorie
                        germano meo <persName key="#Offersio/donatio"><name ref="Gumbertus"
                                >Gumpert</name></persName>, in loco qui dicitor <placeName
                            key="#Petiae #Size" ref="#places/179">Salicitas</placeName>; et est <rs
                            key="#Size">pauco menus de modiloco uno</rs>; aduc uno caput tenet in
                            <placeName>Auserclo</placeName>, et alio caput tenet in terra tua
                            <persName key="#Confinia #Petiae"><name ref="Robertus"
                            >Rodpert</name></persName>, et uno lato in terra <persName
                            key="#Confinia #Petiae"><name ref="Teudebertus"
                            >Teutpert</name></persName>, et alio latere tenet in terra <persName
                            key="#Confinia #Petiae"><name ref="Maurulus">Mauruli</name></persName>;
                            <foreign>prezzo</foreign>: auri soledos nomero trideci; <foreign>pena in
                            duplum. Scrive</foreign>: <persName key="#Writer #Priests"><name
                                ref="Gaudentius">Gaudentius</name></persName>
                        <rs key="#Priests">presbitero</rs>. (â€¦) Actum <placeName ref="#places/4"
                            >Luca</placeName>. <foreign>Sottoscrizioni</foreign>: + Ermilinde
                        religiose Dei ancille venditricis; + <persName key="#Witness #Priests"><name
                                ref="Aurinandus">Aurinand</name></persName>
                        <rs key="#Priests">presbitero</rs>; + <persName
                            key="#Witness #Vir_devotus/vir_honestus"><name ref="Danihel"
                                >Danihel</name></persName>
                        <rs key="#Vir_devotus/vir_honestus">viri devoti</rs> nepote epseius
                        consentiens testis; + <persName key="#Witness #Vir_devotus/vir_honestus"
                                ><name ref="Ifferadus">Hifferad</name></persName>
                        <rs key="#Vir_devotus/vir_honestus">viri devoti</rs> filio quondam
                                <persName><name ref="Rotarius">Rotthari</name></persName> testis; +
                            <persName key="#Witness #Other_clerics"><name ref="Ausbertus"
                                >Auspert</name></persName>
                        <rs key="#Other_clerics">clerici</rs> testis.</ab>
                        </div>
